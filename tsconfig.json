{
  "compilerOptions": {
    "sourceRoot": "./src",
    "sourceMap": true,
    "experimentalDecorators": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
